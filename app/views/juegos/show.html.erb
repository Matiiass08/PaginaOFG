<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
  }

  .content {
    text-align: center;
    color: black;
    font-size: 24px;
    max-width: 80%;
  }

  h1 {
    text-align: center;
    color: black;
    font-size: 36px;
    margin-bottom: 20px;
  }
</style>

<h1><%= @juego.nombre %></h1>

<div class="container">
  <div class="content">
    <p><%= @juego.descripcion %></p>

    <% if @juego.image.present? %>
      <div>
        <%= image_tag @juego.image.url %>
      </div>
    <% end %>

    <div class="btn-back-container">
      <%= link_to 'Volver', juegos_path, class: "btn-back" %>
    </div>
  </div>
</div>
